<EditForm Model="@Candidato" OnValidSubmit="@OnValidSubmit">

    <DataAnnotationsValidator />
    <h3>Dados Pessoais do Candidato</h3>
    <div class="form-group">
        <div><label>Nome</label></div>
        <div><InputText @bind-Value="@Candidato.nome"></InputText></div>
        <ValidationMessage For="@(() => Candidato.nome)"></ValidationMessage>
    </div>

    <div class="form-group">
        <div><label>Sobrenome</label></div>
        <div><InputText @bind-Value="@Candidato.sobrenome"></InputText></div>
        <ValidationMessage For="@(() => Candidato.sobrenome)"></ValidationMessage>

    </div>

    <div class="form-group">
        <div><label>Idade</label></div>
        <div><InputNumber @bind-Value="@Candidato.idade"></InputNumber></div>
        <ValidationMessage For="@(() => Candidato.idade)"></ValidationMessage>
    </div>

    <div class="form-group">
        <div><label>Endereço</label></div>
        <div><InputText @bind-Value="@Candidato.endereco"></InputText></div>
        <ValidationMessage For="@(() => Candidato.endereco)"></ValidationMessage>
    </div>

    <div class="form-group">
        <div><label>Contato</label></div>
        <div><InputText @bind-Value="@Candidato.contato"></InputText></div>
        <ValidationMessage For="@(() => Candidato.contato)"></ValidationMessage>
    </div>

    <div class="form-group">
        <div><label>Email</label></div>
        <div><InputText @bind-Value="@Candidato.email"></InputText></div>
        <ValidationMessage For="@(() => Candidato.email)"></ValidationMessage>
    </div>

    <div class="col-xl-6 mb-5">
        <label>Selecione as tecnologias do candidato</label>
        <RadzenCheckBoxList TValue="int" Orientation="Orientation.Vertical">
            <Items>
                @foreach (var tipo in tecnologias)
                {
                    <RadzenCheckBoxListItem Text="@tipo.tecnologia" Value="@tipo.Id" />
                }

            </Items>
        </RadzenCheckBoxList>
    </div>

    <div class="form-group col-md-6">
        <div><label>Vaga:</label></div>
        <InputSelect class="form-control" @bind-Value="@Candidato.vagaID">
            <option value="">selecione uma vaga</option>

            @foreach (var tipo in vagas)
            {
                <option value="@tipo.Id">@tipo.Vaga</option>
            }

        </InputSelect>
        <ValidationMessage For="@(() => Candidato.vagaID)"></ValidationMessage>
    </div>




    <button type="submit" class="btn btn-primary">Adicionar</button>


</EditForm>

@code {
    @using Prova.Shared.Models

    [Parameter] public Candidato Candidato { get; set; }
    [Parameter] public List<Vagas> vagas { get; set; }
    [Parameter] public List<Tecnologias> tecnologias { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
